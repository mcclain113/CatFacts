<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CatFacts.MainPage">

    <StackLayout>
        <Label x:Name="FactLabel" Text="Loading cat fact..." HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        <Button Text="Get Another Fact" Clicked="OnGetFactClicked" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>